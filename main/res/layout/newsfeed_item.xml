<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:id="@+id/postLL"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatarIV"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Матвей Правосудов"
                android:textColor="#2C2D2E"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="час назад"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ImageView
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_more_horizontal_24"
            android:layout_marginEnd="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/postDescriptonTV"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:maxHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:background="@drawable/newsfeed_stroke"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageIV"
                android:scaleType="centerCrop"
                android:layout_width="110dp"
                android:layout_height="110dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="#2C2D2F"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/podcastTitleTV"
                    android:text="Мысли одной гения"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="1dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/durationTV"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/play_btn_bg"
                    android:layout_width="110dp"
                    android:layout_height="26dp">
                    <ImageView
                        android:src="@drawable/ic_play_16_btn"
                        android:layout_marginLeft="12dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"/>
                    <TextView
                        android:layout_marginStart="6dp"
                        android:textAllCaps="true"
                        android:text="Слушать"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="12sp"
                        android:textColor="#2C2D2E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"

        android:layout_height="44dp">
        <ImageView
            android:src="@drawable/ic_like_outline_24"
            android:layout_marginEnd="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="65"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_comment_outline_24"
            android:layout_marginEnd="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="14"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_share_outline_24"
            android:layout_marginEnd="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="3"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_view_20"
            android:layout_marginEnd="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:text="7.2K"
            android:textColor="#99A2AD"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>